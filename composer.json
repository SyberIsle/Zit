{
  "name": "syberisle/zit",
  "description": "Zit is a simple dependency injector based heavily on Pimple. It aims to provide the same simplicity as Pimple while offering a slightly more robust object interface.",
  "type": "library",
  "keywords": [
    "dependency injection",
    "dependency",
    "di",
    "container",
    "zit",
    "pimple"
  ],
  "homepage": "https://github.com/syberisle/Zit",
  "license": "MIT",
  "authors": [
    {
      "name": "Chris Morrell",
      "homepage": "http://cmorrell.com/"
    }
  ],
  "support": {
    "issues": "https://github.com/syberisle/Zit/issues"
  },
  "autoload": {
    "psr-4": {
      "Zit\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zit\\": "tests"
    }
  },
  "replace": {
    "inxilpro/zit": ">=3.0.0"
  },
  "require": {
    "php": ">=7.2",
    "psr/container": "^1.0",
    "squizlabs/php_codesniffer": "^3.5",
    "sebastian/phpcpd": "^4.1",
    "phpstan/phpstan": "^0.12.32"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5"
  },
  "scripts": {
    "test": "@php vendor/bin/phpunit --colors=always",
    "sniff": "@php vendor/bin/phpcs --standard=PSR12 src",
    "phpcpd": "@php vendor/bin/phpcpd src tests",
    "phpstan": "@php -d memory_limit=-1 vendor/bin/phpstan analyse src"
  }
}
